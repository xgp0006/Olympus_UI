{
  "name": "modular-c2-frontend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run src/**/*.{test,spec}.{js,ts}",
    "test:integration": "vitest run src/**/__tests__/**/*.{js,ts}",
    "test:components": "vitest run src/lib/components/**/*.test.{js,ts}",
    "test:stores": "vitest run src/lib/stores/**/*.test.{js,ts}",
    "test:utils": "vitest run src/lib/utils/**/*.test.{js,ts}",
    "test:plugins": "vitest run src/lib/plugins/**/*.test.{js,ts}",
    "test:e2e": "playwright test",
    "test:runner": "node scripts/test-runner.js",
    "qa": "pnpm check && pnpm lint && pnpm test",
    "qa:full": "pnpm check && pnpm lint && pnpm test:coverage && pnpm test:e2e",
    "tauri": "tauri",
    "prepare": "husky",
    "aerospace:validate": "node scripts/aerospace-validate.js",
    "aerospace:gate1": "npm run format -- --check && npm run lint && npm run check",
    "aerospace:gate2": "npm run check && npm run lint && npm run test && npm run build",
    "aerospace:full": "npm run aerospace:gate1 && npm run aerospace:gate2 && npm run aerospace:validate",
    "nasa-jpl:validate": "node scripts/nasa-jpl-validate.js",
    "nasa-jpl:sri": "node scripts/validate-sri.js",
    "nasa-jpl:compliance": "npm run nasa-jpl:sri && npm run nasa-jpl:validate",
    "husky:init": "node scripts/init-husky.js",
    "postinstall": "npm run husky:init"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.30.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tauri-apps/cli": "^1.6.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.43.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.0",
    "prettier-plugin-svelte": "^3.2.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.8.0",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.0",
    "typescript": "^5.5.0",
    "vite": "^4.5.0",
    "vitest": "^1.6.0",
    "husky": "^9.1.7"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "maplibre-gl": "^5.6.1",
    "svelte-dnd-action": "^0.9.64"
  },
  "packageManager": "pnpm@9.0.0"
}
